@using TeamFourA.Services;

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";

    StringTable stringTbl = (StringTable)ViewData["StringTbl"];
}

<form id="loginForm" action="Login/Login" method="POST">
    <table align="center">
        <tr>
            <td>@stringTbl.username:</td>
            <td>
                <input id="uname" name="username" value="@ViewData["username"]" />
            </td>
        </tr>
        <tr>
            <td>@stringTbl.password:</td>
            <td><input id="pwd" name="password" type="password" /></td>
        </tr>
        <tr>
            <td colspan="2" align="right">
                <input id="loginBtn" type="button" value="@stringTbl.login" />
            </td>
        </tr>
        <tr>
            <td colspan="2" class="err">
                <div id="errmsg">
                    @if (ViewData.ContainsKey("err"))
                    {
                        @ViewData["err"];
                    }
                </div>
            </td>
        </tr>
    </table>
    <input id="hashPwd" name="hashPasswd" type="hidden" />
</form>

@section scripts {
    <script src="~/js/site.js"></script>
}